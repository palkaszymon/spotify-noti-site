{% extends "layout.html.jinja" %}
{% set formpage = True %}
{% block content %}
<h1>Login</h1>
<form method="POST" action="">
    {{ form.hidden_tag() }}
    {{ form.email }}
    {{ form.password }}
    {{ form.submit }}
</form>
{% for message in get_flashed_messages() %}
    {{ message }}
{% endfor %}
<br>
<a href="{{url_for('signup')}}">No account? Sign up here!</a>
{% endblock %}